<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    android:id="@+id/supercontenedor"
    android:background="@color/palido"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="437dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imagesuper"
            android:layout_width="270dp"
            android:layout_height="130dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supernombre"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idsuper"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="158dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="4dp"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/supernombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/supernombre"
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginStart="148dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="4dp"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imagesuper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idsuper" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
